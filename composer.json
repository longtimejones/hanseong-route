{
    "name": "hanseong/route",
    "description": "Hanseong Route is a simple minimalistic PRS-7 router",
    "keywords": [
        "hanseong",
        "route",
        "router"
    ],
    "license": "MIT",
    "authors" : [
        {
            "name": "Tim Jong Olesen",
            "email": "longtimejones@protonmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.3",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "Hanseong\\Route\\": "src/"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse src -l 6 --no-progress"
    },
    "config": {
        "sort-packages": true
    }
}
